<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>PetLandia</title>

    <link rel="icon" href="/images/huellas-de-garras.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/images/huellas-de-garras.ico" type="image/x-icon">
    
    <!-- Links -->
    <script src="https://kit.fontawesome.com/b29db1d018.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/productoCategoria.css"> <!-- REALIZAR -->
    <link rel="stylesheet" href="/css/todosProductos.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/responsive.css">
  </head>
  <body>

    <%- include('./partials/header.ejs') %> <!--include header-->

    <main>

        <div class="main-products-container">

            <div class="index-product-container">
                <div class="all-products">
                    <% for(let i=0;i<productoXCategoria.length;i++){%>
                        <a href="/producto/producto/<%=productoXCategoria[i].ID%>">
                            <article class="product">
                                <img src="<%=productoXCategoria[i].Imagen%>" alt="">
                                <% if(productoXCategoria[i].Envio > 0){ %>
                                    <p class="truck-p" id="id-envio"><i class="fa-solid fa-truck truck"> $ <%= productoXCategoria[i].Envio %></i></p>
                                  <% } else{ %>
                                    <i class="fa-solid fa-truck truck"> Gratis</i>
                                <% } %>
                                <div class="price-discount">
                                    <p class="product-price">$ <%=productoXCategoria[i].Precio%></p>
                                    <% if(productoXCategoria[i].Descuento > 0 && productoXCategoria[i].Descuento <= 100 ){ %>
                                    <p class="product-discount"><%=productoXCategoria[i].Descuento%>% OFF</p>
                                    <% } %>
                                </div>
                                <h2><%=productoXCategoria[i].Nombre%></h2>
                            </article>
                        </a>
                    <% } %>
                </div>
            </div>
    
            <div class="product-filters">
                <h1>Productos</h1>
    
                <h3>Categorias</h3>
                <ul>
                    <% categorias.forEach(categoria => { %>
                        <a href="/productos/categoria/categorias/<%= categoria.Nombre %>"><li><%= categoria.Nombre %></li></a>
                    <% }); %>
                </ul>
    
                <h3>Animales</h3>
                <ul>
                    <% animales.forEach(animal => { %>
                        <a href="/productos/categoria/animales/<%= animal.Nombre %>"><li><%= animal.Nombre %></li></a>
                    <% }); %>
                </ul>
    
                <h3>Marcas</h3>
                <ul>
                    <% marcas.forEach(marca => { %>
                        <a href="/productos/categoria/marcas/<%= marca.Nombre %>"><li><%= marca.Nombre %></li></a>
                    <% }); %>
                </ul>
                <!-- <h3>Envio</h3>
                <ul></ul> -->
            </div>

        </div>
        
    </main>

    <%- include('./partials/footer.ejs') %> <!--include footer-->

    <!-- Links -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>