<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>PetLandia</title>

    <link rel="icon" href="/images/huellas-de-garras.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/images/huellas-de-garras.ico" type="image/x-icon">
    
    <!-- Links -->
    <script src="https://kit.fontawesome.com/b29db1d018.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/productoCategoria.css"> <!-- REALIZAR -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/responsive.css">
  </head>
  <body>

    <%- include('./partials/header.ejs') %> <!--include header-->

    <main>
        <div class="index-product-container">
            <div class="all-products">
                <% for(let i=0;i<productoXcategoria.length;i++){%>
                    <a href="/producto/producto/<%=productoXcategoria[i].ID%>">
                        <article class="product">
                            <img src="<%=productoXcategoria[i].Imagen%>" alt="">
                            <i class="fa-solid fa-truck truck"></i>
                            <div class="price-discount">
                                <p class="product-price">$ <%=productoXcategoria[i].Precio%></p>
                                <% if(productoXcategoria[i].Descuento > 0 && productoXcategoria[i].Descuento <= 100 ){ %>
                                <p class="product-discount"><%=productoXcategoria[i].Descuento%>% OFF</p>
                                <% } %>
                            </div>
                            <h2><%=productoXcategoria[i].Nombre%></h2>
                        </article>
                    </a>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('./partials/footer.ejs') %> <!--include footer-->

    <!-- Links -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>