<div id="carouselExample" class="carousel slide carousel-tam">
    <div class="carousel-inner">
        <% for (let i = 0; i < productos.length; i++) { %>
            <div class="carousel-item<%= i === 0 ? ' active' : '' %>">
                <div class="carousel-center">
                    <div class="row">
                        <% for (let j = i; j < i + 1; j++) { %>
                            <div class="col-md-4">
                                <a href="/producto/producto/<%= productos[j].ID %>">
                                    <article class="product">
                                        <img src="<%= productos[j].Imagen %>" alt="<%= productos[j].Nombre %>">
                                        <% if (productos[j].Envio > 0) { %>
                                            <p class="truck-p" id="id-envio"><i class="fa-solid fa-truck truck"> $ <%= productos[j].Envio %></i></p>
                                        <% } else { %>
                                            <i class="fa-solid fa-truck truck"> Gratis</i>
                                        <% } %>
                                        <div class="price-discount">
                                            <p class="product-price">$ <%= productos[j].Precio %></p>
                                            <% if (productos[j].Descuento > 0 && productos[j].Descuento <= 100) { %>
                                                <p class="product-discount"><%= productos[j].Descuento %>% OFF</p>
                                            <% } %>
                                        </div>
                                        <h2><%= productos[j].Nombre %></h2>
                                    </article>
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>